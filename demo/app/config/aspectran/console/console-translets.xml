<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 4.0//EN"
                           "http://aspectran.github.io/dtd/aspectran-4.dtd">

<aspectran>

    <description>
        This is an Aspectran configuration for printing "Hello, World.".
    </description>

    <translet name="jetty:run">
        <description style="apon">
            |
            |   {{RED}}Starting jetty server...{{off}}
            |---------------------------------------------------------------------------------------------------------
        </description>
        <action bean="jetty.server" method="start"/>
    </translet>

    <translet name="jetty:stop">
        <description style="apon">
            |
            |   {{RED}}Stopping jetty server...{{off}}
            |---------------------------------------------------------------------------------------------------------
        </description>
        <action bean="jetty.server" method="stop"/>
    </translet>

</aspectran>