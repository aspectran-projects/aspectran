<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 4.0//EN"
                           "http://aspectran.github.io/dtd/aspectran-4.dtd">

<aspectran>

    <translet name="/examples/hello-world">
        <dispatch name="template">
            <echo id="page">
                <attributes>
                    <item name="headline">Hello, World!</item>
                    <item name="teaser">This is the output of a JSP page that is part of the HelloWorld application.</item>
                    <item name="include">pages/hello-world</item>
                </attributes>
            </echo>
        </dispatch>
    </translet>

</aspectran>