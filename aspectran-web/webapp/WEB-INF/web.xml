<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>aspectran-web</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<listener>
		<listener-class>com.aspectran.web.context.listener.AspectranWebApplicationListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.aspectran.web.context.listener.AspectranHttpSessionListener</listener-class>
	</listener>
	<context-param>
		<param-name>aspectran:contextConfigLocation</param-name>
		<param-value>classpath:aspectran/aspectran-example.xml</param-value>
	</context-param>
	<listener>
		<listener-class>com.aspectran.web.context.listener.AspectranContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>aspectran:scheduler:startDelaySeconds</param-name>
		<param-value>5</param-value>
	</context-param>	<context-param>
		<param-name>aspectran:scheduler:waitOnShutdown</param-name>
		<param-value>true</param-value>
	</context-param>
	<listener>
		<listener-class>com.aspectran.web.context.listener.AspectranSchedulerListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>aspectran-web</servlet-name>
		<servlet-class>com.aspectran.web.context.servlet.WebActivityServlet</servlet-class>
		<!-- init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:aspectran/aspectran-example.xml</param-value>
		</init-param -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>aspectran-web</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>