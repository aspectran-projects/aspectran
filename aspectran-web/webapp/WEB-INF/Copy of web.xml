<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>translets-web</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

	<context-param>
		<param-name>context:configLocation</param-name>
		<param-value>
			WEB-INF/translets/context/root/rootContext.xml
			WEB-INF/translets/context/root/ajaxContext.xml
			WEB-INF/translets/context/root/frontContext.xml
			WEB-INF/translets/context/root/backofficeContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.jhlabs.translets.web.context.ContextManagerListener
		</listener-class>
	</listener>
	<servlet>
		<servlet-name>translets:activity:front</servlet-name>
		<servlet-class>org.jhlabs.translets.web.TransletsActivityServlet</servlet-class>
		<init-param>
			<param-name>context:replaceMerge</param-name>
			<param-value>
				common
				front
			</param-value>
		</init-param>
		<init-param>
			<param-name>context:skipMerge</param-name>
			<param-value>
				common
				front
			</param-value>
		</init-param>
		<init-param>
			<param-name>context</param-name>
			<param-value>
				common
			</param-value>
		</init-param>
		<init-param>
			<param-name>context:configLocation</param-name>
			<param-value>WEB-INF/classes/translets/context/root/rootContext.xml</param-value>
		</init-param>
		<init-param>
			<param-name>context:configLocation:replaceMerge</param-name>
			<param-value>WEB-INF/classes/translets/context/root/rootContext.xml</param-value>
		</init-param>
		<init-param>
			<param-name>access:allowRemoteAddress</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>access:denyRemoteAddress</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>access:allowRemoteHost</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>access:denyRemoteHost</param-name>
			<param-value></param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>translets:activity:backOffice</servlet-name>
		<servlet-class>org.jhlabs.translets.web.TransletsActivityServlet</servlet-class>
		<init-param>
			<param-name>context:replaceMerge</param-name>
			<param-value>
				common
				backoffice
			</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>translets:activity:ajaxService</servlet-name>
		<servlet-class>org.jhlabs.translets.web.TransletsActivityServlet</servlet-class>
		<init-param>
			<param-name>context:replaceMerge</param-name>
			<param-value>
				common
				ajax
			</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>translets:activity:front</servlet-name>
		<url-pattern>/front/*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>translets:activity:backOffice</servlet-name>
		<url-pattern>/backoffice/*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>translets:activity:ajaxService</servlet-name>
		<url-pattern>*.ajax</url-pattern>
	</servlet-mapping>

</web-app>